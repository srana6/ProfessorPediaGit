<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/homeFragment"
        android:background="@drawable/backg"
        tools:context="headfirst.com.projectapplication.MainScreen"
        >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/iitseal"
            android:id="@+id/iitseal"
            android:layout_alignBottom="@+id/relativeLayout4"
            android:layout_centerHorizontal="true" 
	    android:layout_marginBottom="18dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_toStartOf="@+id/textView"
            android:layout_toLeftOf="@+id/textView"
            android:id="@+id/relativeLayout4">

        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Illinois Institute of Technology"
            android:id="@+id/textView"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView"
            android:background="@drawable/iitlogo"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"/>
        <RelativeLayout
	    android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <info.hoang8f.widget.FButton
                android:layout_width="120dp"
                android:layout_height="80dp"
                style="@style/button_text"
                android:textSize="14dp"
                android:id="@+id/buttonProfessorID"
                android:text="Professors"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                app:cornerRadius="50dp"
                app:buttonColor="@color/fbutton_color_alizarin"
                app:shadowColor="@color/fbutton_color_pomegranate"
                android:layout_marginBottom="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <info.hoang8f.widget.FButton
                android:layout_width="120dp"
                android:layout_height="80dp"
                style="@style/button_text"
                android:textSize="14dp"
                android:id="@+id/buttonCoursesID"
                android:text="Courses"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                app:cornerRadius="50dp"
                app:buttonColor="@color/fbutton_color_alizarin"
                app:shadowColor="@color/fbutton_color_pomegranate"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45dp">


            <info.hoang8f.widget.FButton
                android:layout_width="120dp"
                android:layout_height="80dp"
                style="@style/button_text"
                android:textSize="14dp"
                android:id="@+id/buttonTrendingCoursesID"
                android:text="Courses\nTrending"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                app:cornerRadius="50dp"
                app:buttonColor="@color/fbutton_color_alizarin"
                app:shadowColor="@color/fbutton_color_pomegranate"
                android:layout_marginBottom="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />

            <info.hoang8f.widget.FButton
                android:layout_width="120dp"
                android:layout_height="80dp"
                style="@style/button_text"
                android:textSize="14dp"
                android:id="@+id/buttonFAQID"
                android:text="FAQ"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                app:cornerRadius="50dp"
                app:buttonColor="@color/fbutton_color_alizarin"
                app:shadowColor="@color/fbutton_color_pomegranate"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </RelativeLayout>
